#include<stdio.h>
 int main(){
     int a,b,c;
     printf("Ingresa tres numeros: ");
     scanf("%d %d %d",&a,&b,&c);
     if (a>=b && a>=c)
     printf("%d",a);
     if(b>=a && b>=c)
     printf("%d",b);
     if(c>=a && c>=b)
     printf("%d",c);
     \\ en este ejercicio solo se usan las mismas condicionantes solo que los ciclos son mas cortos 
 }