include <stdio.h>
int main() {
    float base, altura, per, area;
    printf("Base y altura: ");
    scanf("%f %f", &base, &altura);
    per = 2 * (base + altura);
    area = base * altura;
    printf("Perimetro: %.2f  Area: %.2f", per, area);
    return 0;
\\ Busque la formula porque se me habia olvidado y me base en ella tambien tuve que hacer la operacion para verificar que los resultados fueran los correctos
}
