#include<stdio.h>
 int main(){
     int a,b,c,r;
     printf("Ingresa tres numeros: ");
     scanf("%d %d %d",&a,&b,&c);
     if (a>0)
     r = a*b*c;
     else 
     r = a+b+c;
     printf("Resultado: %d",r);
     //solo era ingresar los numeros ya dependiendo en ellos y su resultado es producto o suma
 }
