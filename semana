#include<stdio.h>
 int main(){
     int n;
     printf("Ingresa el numero del 1 al 7: ");
     scanf("%d", &num);
     switch(num){
         case 1:
         printf("Lunes\n");
         break;
         case 2:
         printf("Martes\n");
         break;
         case 3:
         printf("Miercoles\n");
         break;
         case 4:
         printf("Jueves\n");
         break;
         case 5:
         printf("Viernes\n");
         break;
         case 6:
         printf("Sabado\n");
         break;
         case 7:
         printf("Domingo\n");
         break;
         default:
         printf("Error de opcion ");
         break;
         // Se empleo el comando switch aunque me tarde un poco en escribirlo
         fue facil pero largo:(
     
         
     }
     }
