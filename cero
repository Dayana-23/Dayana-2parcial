#include<stdio.h>
 int main(){
int a,b,s;
printf("Ingresa dos numeros: ");
scanf("%d %d", &a,&b);
s = a+b;
if(s>0)
printf("Suma positiva");
else if(s<0)
printf("Suma negativa");
else 
printf("Suma cero");
    //solo es  suma de dos numeros ya con ese resultado dependiendo si es mayor o menor a 0 sea positivo o negativo
 }
